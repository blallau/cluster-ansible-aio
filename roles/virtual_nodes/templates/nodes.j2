{% set mac_prefix = "52:54:00:33" %}
{% set lettres = ['b', 'c', 'd', 'e', 'f', 'g', 'h'] %}
{% macro disk_device(index) -%}
{% set device = lettres[index | int] -%}
{{ device }}
{%- endmacro %}
---
{% for master in range(1, master_nb+1) %}
- name: "{{ node_prefix }}master{{ master }}"
  ram: {{ master_ram }}
  vcpu: {{ master_cpu }}
  role: master
{% if net_interfaces %}
  interfaces:
{% set outer_master_loop = loop %}
{% for intf in net_interfaces %}
{% if vm_os_distro == 'centos' or vm_os_distro == 'debian' %}
{% set intf_nb = loop.index0 %}
    - name: "eth{{ intf_nb }}"
{% elif vm_os_distro == 'ubuntu' %}
{% set intf_nb = loop.index + 1 %}
    - name: "ens{{ intf_nb }}"
{% elif vm_os_distro == 'fcos' %}
{% set intf_nb = loop.index0 %}
    - name: "enp1s{{ intf_nb }}"
{% endif %}
{% if intf.forward is defined and intf.forward == 'nat' %}
      external: True
{% endif %}
      bridge: "{{ intf.bridge }}"
      mode: "{{ intf.mode }}"
      cidr: "{{ intf.cidr }}"
{% set ip = 200 + outer_master_loop.index * 10 + loop.index %}
      address: "{{ intf.cidr | ipaddr(ip) | ipaddr('address') }}"
      mac: "{{ mac_prefix }}:2{{ outer_master_loop.index }}:0{{ loop.index }}"
{% if intf.mode == 'static' %}
      netmask: "{{ intf.cidr | ipaddr('netmask') }}"
{% endif %}
{% endfor %}
{% else %}
  interfaces: []
{% endif %}
{% if vm_volumes|length > 0 %}
  disks:
{% for volume in vm_volumes %}
{% set device = disk_device(loop.index) %}
    - name: "vol-{{ node_prefix }}master{{ master }}-{{ loop.index }}"
      device: "vd{{ device }}"
      size: {{ volume.size }}
      format: {{ volume.format }}
{% endfor %}
{% endif %}
{% endfor %}
{% for worker in range(1, worker_nb+1) %}
- name: "{{ node_prefix }}worker{{ worker }}"
  ram: {{ worker_ram }}
  vcpu: {{ worker_cpu }}
  role: worker
{% if net_interfaces %}
  interfaces:
{% set outer_worker_loop = loop %}
{% for intf in net_interfaces %}
{% if vm_os_distro == 'centos' or vm_os_distro == 'debian' %}
{% set intf_nb = loop.index0 %}
    - name: "eth{{ intf_nb }}"
{% elif vm_os_distro == 'ubuntu' %}
{% set intf_nb = loop.index + 1 %}
    - name: "ens{{ intf_nb }}"
{% elif vm_os_distro == 'fcos' %}
{% set intf_nb = loop.index0 %}
    - name: "enp1s{{ intf_nb }}"
{% endif %}
{% if intf.forward is defined and intf.forward == 'nat' %}
      external: True
{% endif %}
      bridge: "{{ intf.bridge }}"
      mode: "{{ intf.mode }}"
      cidr: "{{ intf.cidr }}"
{% set ip = 100 + outer_worker_loop.index * 10 + loop.index %}
      address: "{{ intf.cidr | ipaddr(ip) | ipaddr('address') }}"
      mac: "{{ mac_prefix }}:1{{ outer_worker_loop.index }}:0{{ loop.index }}"
{% if intf.mode == 'static' %}
      netmask: "{{ intf.cidr | ipaddr('netmask') }}"
{% endif %}
{% endfor %}
{% else %}
  interfaces: []
{% endif %}
{% if vm_volumes|length > 0 %}
  disks:
{% for volume in vm_volumes %}
{% set device = disk_device(loop.index) %}
    - name: "vol-{{ node_prefix }}node{{ worker }}-{{ loop.index }}"
      device: "vd{{ device }}"
      size: {{ volume.size }}
      format: {{ volume.format }}
{% endfor %}
{% endif %}
{% endfor %}
